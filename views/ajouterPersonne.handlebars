{{> enTete}}
{{> menu}}	
{{#if etu}}
	<h1>Ajouter un étudiant</h1>
	<form action="/insererPersonne" method="POST">
		<label>Année</label>
		<select name="annee">
			{{#each annee}}
				<option value="{{this.div_nom}}">{{this.div_nom}}</option>
			{{/each}}
		</select>
		<br>
		<label>Département</label>
		<select name="dep">
			{{#each dep}}
				<option value="{{this.dep_nom}}">{{this.dep_nom}}</option>
			{{/each}}
		</select>
		<br>
		<input type="submit" value="Valider">
	</form>
{{else}}
	{{#if sal}}
		<h1>Ajouter un salarié</h1>
		<form action="/insererPersonne" method="POST">
			<label>Téléphone professionnel</label>
			<input type ="text" name="tel">
			<br>
			<label>Fonction</label>
			<select name="fonction">
				{{#each fonction}}
					<option value="{{this.fon_libelle}}">{{this.fon_libelle}}</option>
				{{/each}}
			</select>
			<br>
			<input type="submit" value="Valider">
		</form>
	{{else}}
		<h1>Ajouter des personnes</h1>
		<form action="/validerPersonne" method="POST">
			<label>Nom</label>		
			<input type="text" name="nom">
			<br>
			<label>Prénom</label>
			<input type="text" name="prenom">
			<br>
			<label>Téléphone</label>
			<input type="tel" name="telephone">
			<br>
			<label>Mail</label>
			<input type="text" name="email">
			<br>
			<label>Login</label>
			<input type="text" name="login">
			<br>
			<label>Mot de Passe</label>
			<input type="password" name="password">
			<br>
			<label>Catégorie</label>
			<input type="radio" name="categorie" value="etudiant">Etudiant</input>
			<input type="radio" name="categorie" value="salarie">Salarié</input>
			<br>
			<input type="submit" value="Valider">
		</form>
	{{/if}}
{{/if}}